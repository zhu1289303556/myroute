<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>linux</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/route-server/bin</directory>
			<outputDirectory>route-server/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <includes>
				<include>route-server</include>
				<include>wrapper-linux*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/route-server/lib</directory>
			<outputDirectory>route-server/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
				<include>libwrapper-linux*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/generated-resources/appassembler/jsw/route-server/conf</directory>
			<outputDirectory>route-server/conf</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>route-server/conf</outputDirectory>
			<excludes>
				<exclude>*.dtd</exclude>
				<exclude>log4j*</exclude>
			</excludes>
		</fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <outputDirectory>route-server/</outputDirectory>
            <includes>
                <include>version.txt</include>
            </includes>
        </fileSet>
		<fileSet>
			<directory>src/main/assembly/conf</directory>
			<outputDirectory>route-server/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly/bin</directory>
			<outputDirectory>route-server/bin</outputDirectory>
			<fileMode>0755</fileMode>
			<includes>
				<include>*.sh</include>
            </includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/logs</directory>
			<outputDirectory>route-server/logs</outputDirectory>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>
	</fileSets>

</assembly>
